<% provide(:title, "Log in") %>
<div style="margin: 0px 0px 0px 150px"><h1>Welcome to LibraryHT Please login to your account</h1></div>
<br/>
<br />
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>
      </br>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control' %>
      </br>

      <%= f.submit "Sign in", class: "btn btn-primary btn-block" %>
      </br>
    <% end %>
    </br>
    <div align="right">
    New user?
    <%= link_to 'Sign up', signup_path, class: "btn btn-primary", style: "color: #ffffff" %>
     </div>
  </div>
</div>

